{% extends 'layout.twig' %}
{% block content %}
<section>
   <div class="container">
      <h1 class="main">Blog</h1>
      <span class="breadcrumb">
            <ul>
                <li>
                     <a href="/blog">Blog</a>
                </li>
                <li>
                    {{ posts.category }}
                </li>
            </ul>
            </span>
      <div class="blog-grid">
      {% for post in posts %}
      <div>
         <p>{{ post.published }} â€¢ {{ post.readingTime }}</p>
         {% if post.image %}
         <p class="mainimage"><a href="/blog/{{posts.category}}/{{post.slug}}"><img class="main-image" src="{{ post.image }}?w=350&auto=format" alt="{{post.title}}"></a></p>
         {% endif %}
         <h3><a href="/blog/{{posts.category}}/{{post.slug}}"><b>{{post.title}}</b></a></h3>
         <p>{{post.snippet}}</p>
          {% if post.tags %}
          <p class="tags">
            {% for tag in post.tags %}
            <span class="tag"><a href="/blog/tags/{{tag}}">{{ "%s%s" | format("#", tag) }}</a></span>
            {% endfor %}
         </p>
            {% endif %}
            <p><a href="/blog/{{posts.category}}/{{post.slug}}">READ</a></p>
      </div>
      {% endfor %}
      </div>
   </div>
</section>
{% endblock %}